// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 20, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    "reload_style_on_change": true,
    // Choose the order of the modules
    "modules-left": [
        "group/group-shortcuts",
        "hyprland/workspaces"
        //"hyprland/mode",
        //"hyprland/scratchpad",
        //"wlr/taskbar"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "group/group-day",
        "group/group-vitals",
        "group/group-controls"
    ],
    // Groups
    "group/group-day": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-day",
            "transition-left-to-right": false
        },
        "modules": [
            // "custom/day",
            "clock",
            "custom/weather",
            "custom/prayer",
            "custom/notification"
        ]
    },
    "group/group-shortcuts": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-shortcuts",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/shortcuts",
            "custom/keybinds",
            "custom/launcher",
            "custom/emoji",
            "custom/clipboard",
            "custom/screenshot"
        ]
    },
    "group/group-vitals": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-vitals",
            "transition-left-to-right": false
        },
        "modules": [
            // "custom/vitals", // First element is the "group leader" and won't ever be hidden
            "tray",
            "battery",
            "disk",
            // "network",
            "bluetooth",
            "memory",
            "cpu",
            "temperature"
        ]
    },
    "group/group-controls": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-controls",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/controls", // First element is the "group leader" and won't ever be hidden
            //"custom/safecharging",
            // "keyboard-state",
            "group/group-power",
            "group/group-brightness",
            // "mpd",
            "hyprland/language",
            "pulseaudio",
            "idle_inhibitor",
            // "power-profiles-daemon",
            "custom/playerctl"
        ]
    },
    "group/group-brightness": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-brightness",
            "transition-left-to-right": false
        },
        "modules": [
            "backlight",
            "backlight/slider"
        ]
    },
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/power",
            "custom/quit",
            "custom/lock",
            "custom/reboot"
        ]
    },
